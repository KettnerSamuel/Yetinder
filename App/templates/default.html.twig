<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Yetinder</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <style>
                td{
                    height: 53px;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
              <h5 class="my-0 mr-md-auto font-weight-normal">Main page</h5>
              <nav class="my-2 my-md-0 mr-md-3">
                <a class="p-2 text-dark" href="{{ path('app_home_index') }}">Home</a>
                <a class="p-2 text-dark" href="{{ path('app_yetinder_index') }}">Yetinder</a>
                {% if app.user %}
                  <a class="p-2 pr-4 text-dark border-right" href="{{ path('app_Form') }}">Add Yeti</a>
                {% endif %}
              </nav>
                {% if app.user %}
                    <div>
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% else %}
                    <a class="btn btn-outline-primary" href="{{ path('app_register') }}">Sign up</a>
                {% endif %}
            </div>
            <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
              {% include pathToMain %}

            </div>
            <footer class="text-dark border-top text-center py-3 fixed-bottom" style="background-color: white;">
                Yeti National Park Â© 2024
            </footer>
        {% endblock %}
    </body>
</html>